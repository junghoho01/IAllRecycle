<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecycleRecordAddActivity">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="Admin Dashboard"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/subTitlev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titleTv"
            android:text="abc@example.com"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_logout_white"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/goBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/newsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Add Record"
            android:textSize="30dp" />


        <EditText
            android:id="@+id/glassEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsHeader"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_edittext02"
            android:drawablePadding="10dp"
            android:hint="Glass amount"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/paperEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/glassEt"
            android:background="@drawable/shape_edittext02"
            android:drawablePadding="10dp"
            android:hint="Paper amount"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/plasticEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/paperEt"
            android:background="@drawable/shape_edittext02"
            android:drawablePadding="10dp"
            android:hint="Plastic amount"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/othersEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plasticEt"
            android:background="@drawable/shape_edittext02"
            android:drawablePadding="10dp"
            android:hint="Others amount"
            android:inputType="number"
            android:padding="10dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_button02"
        android:text="Submit Record"
        android:textColor="@color/purple_500" />

</RelativeLayout>